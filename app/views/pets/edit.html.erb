<h1>Edit Pet</h1>

<% if @pet.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @pet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/pets/<%= @pet.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="pet_name">Name</label>
  <input id="pet_name" name="pet[name]" type="text" value="<%= @pet.name %>">
  <label for="pet_age">Age</label>
  <input id="pet_age" name="pet[age]" type="text" value="<%= @pet.age %>">
  <label for="pet_weight">Weight</label>
  <input id="pet_weight" name="pet[weight]" type="text" value="<%= @pet.weight %>">
  <label for="pet_kind">Kind</label>
  <input id="pet_kind" name="pet[kind]" type="text" value="<%= @pet.kind %>">
  <button>Update Pet</button>
</form>