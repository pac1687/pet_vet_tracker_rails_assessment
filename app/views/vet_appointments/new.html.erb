<h1>New Vet Appointment for <%= @vet_appointment.pet.name %></h1>

<% if @vet_appointment.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @vet_appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/pets/<%= @vet_appointment.pet.id %>/vet_appointments" method="post">
  <input id="pet_id" name="vet_appointment[pet_id]" type="hidden" value="<%= @vet_appointment.pet_id %>">
  <select name="vet_appointment[veterinarian_id]">
    <% @veterinarians.each do |veterinarian|%>
    <option value="<%= veterinarian.id %>"> <%= veterinarian.name %></option>
    <% end %>
  </select>
  <label for="description">Description</label>
  <input id="description" name="vet_appointment[description]" type="text" value="<%= @vet_appointment.description %>">
  <label for="note">Note</label>
  <input id="note" name="vet_appointment[note]" type="text" value="<%= @vet_appointment.note %>">
  <label for="cost">Cost</label>
  <input id="cost" name="vet_appointment[cost]" type="text" value="<%= @vet_appointment.cost %>">
  <label for="date">Date</label>
  <input id="date" name="vet_appointment[date]" type="text" value="<%= @vet_appointment.date %>">
  <button>Add Vet appointment</button>
</form>